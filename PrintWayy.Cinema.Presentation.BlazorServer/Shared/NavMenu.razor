@using PrintWayy.Cinema.Domain.Models
@inject IUserService UserService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <span class="oi oi-person" aria-hidden="true"></span>
            @if (User != null)
            {
                <span>@User.User.UserName</span>
            }
            else
            {
                <span>Usuário</span>
            }
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="rooms" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Salas
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="film/1">
                <span class="oi oi-browser" aria-hidden="true"></span> Filmes
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="session/1">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Sessões
            </NavLink>
        </div>
    </nav>
</div>

@code {
     public AuthenticateData User
    {
        get { return UserService.User; }
    }
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
